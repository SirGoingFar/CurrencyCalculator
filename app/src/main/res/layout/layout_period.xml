<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_period_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/text_past_x_days"
        android:textColor="@color/color_period_selector"
        android:textSize="@dimen/text_16sp" />

    <View
        android:id="@+id/view_indicator_dot"
        android:layout_width="@dimen/dimen_6dp"
        android:layout_height="@dimen/dimen_6dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:background="@drawable/bg_indicator_dot" />
</LinearLayout>